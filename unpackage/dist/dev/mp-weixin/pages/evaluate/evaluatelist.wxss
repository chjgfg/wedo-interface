
.evaluatelist {
	margin-top: 10%;
	width: 94%;
	margin-left: 3%;
}
.heard {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.heard-ch1 {
	width: 33%;
}
.heard-ch2 {
	width: 44%;
}
.heard-ch3 {
	width: 23%;
}
.evaluate-picture {
	width: 202rpx;
	height: 300rpx;
	-webkit-border-radius: 0.3em;
	        border-radius: 0.3em;
}
.bookname {
	font-size: 36rpx;
	font-weight: 900;
}
.author {
	font-size: 30rpx;
}
.other {
	font-size: 33rpx;
	font-weight: 500;
}
.say {
	margin-left: 5%;
	border-left: 1rpx solid #AAAAAA;
	padding-left: 5%;
}
.addit {
	width: 100rpx;
	height: 50rpx;
	border: 1rpx solid #ED1C24;
	-webkit-border-radius: 0.5em;
	        border-radius: 0.5em;
}
.addit>text {
	font-size: 26rpx;
	text-align: center;
	line-height: 50rpx;
	margin-left: 25%;
}
.body {
	margin-top: 10%;
}
.title {
	height: 50rpx;
	border-bottom: 1rpx solid #AAAAAA;
}
.evaluate {
	margin-top: 5%;
}
.evaluate-ch1 {
	-webkit-box-shadow: 1rpx 5rpx 10rpx #CCCCCC;
	        box-shadow: 1rpx 5rpx 10rpx #CCCCCC;
	margin-bottom: 5%;
	border: 1rpx solid #AAAAAA;
	-webkit-border-radius: 0.5em;
	        border-radius: 0.5em;
}
.evaluate-ch1-ch {
	margin: 3%;
}
.evaluate-ch1-ch1-picture {
	width: 100rpx;
	height: 100rpx;
	-webkit-border-radius: 5em;
	        border-radius: 5em;
	vertical-align: middle;
	/* 将图片和字垂直居中 */
}
.evaluate-ch1-ch1-name {
	margin-left: 3%;
	margin-top: -100%;
}
.evaluate-ch1-ch2,
.evaluate-ch1-ch3 {
	margin-top: 5%;
}
.cuIcon-comment {
	margin-left: 5%;
}
.red {
	color: #FF0000;
}

